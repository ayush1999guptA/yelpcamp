<% include ../partials/header.ejs %>
<div class="container" style="text-align: center; margin-top: 5%" >
    <h1>Create a new comment on <%= campground.name %></h1>

    <form action="/campgrounds/<%= campground._id %>/comments" method="POST" style="margin-top: 5%">
        <div class="form-group">
            <input type="text" class="form-control" name="comment[text]" placeholder="Enter the text">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-outline-info btn-block">Create</button>
        </div>

    </form>
    <a href="/campgrounds/<%= campground._id %>" style="position: absolute; left:25%;">Go back</a>
</div>
<% include ../partials/footer.ejs %>