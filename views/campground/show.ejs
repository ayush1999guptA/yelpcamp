<% include ../partials/header.ejs %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yeapl Camp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card" style="width: 100%">
                <img src="<%= campground.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.name %> (<strong class=>Rs.500/night</strong>)</h5>
                    <p class="card-text"><%= campground.discription %></p>
                    <div class="well" style="background-color: #e8e8e8;padding: 2%" >
                        <div class="well-heading">
                            <div class="text-right">
                                <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-lg btn-info">Leave a Review</a>
                            </div>
                            <br>
                            <br>
                        </div>

                            <%campground.comments.forEach(function (comment) {%>
                        <div class="row">
                                    <div class="col-md-12">
                                           <strong> <%= comment.author.username %></strong>
                                        <span style="position: absolute;right: 10%;">10 days ago</span>
                                        <p><%= comment.text %></p>
                                    </div>


                        </div>
                            <%})%>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<% include ../partials/footer.ejs %>